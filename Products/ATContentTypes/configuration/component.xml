  <sectiontype name="metadata">
    <description format="plain">
        A single metadata element
    </description>
    <key name="name" attribute="name" datatype="string"
         required="yes" />
    <key name="friendlyName" attribute="friendlyName" datatype="string"
         default="" required="no" />
    <key name="description" attribute="description" datatype="string"
         default="" required="no" />
    <key name="enabled" attribute="enabled" datatype="boolean"
         default="on" required="no" />
  </sectiontype>

  <sectiontype name="index">
    <description format="plain">
