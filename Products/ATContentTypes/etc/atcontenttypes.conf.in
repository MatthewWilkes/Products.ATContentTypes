    </index>
    <index>
      name end
      friendlyName End Date
      description The end date and time of an event
      criterion ATFriendlyDateCriteria
      criterion ATDateRangeCriterion
    </index>
    <index>
      name created
      friendlyName Creation Date
      description The time and date an item was created
      criterion ATFriendlyDateCriteria
      criterion ATDateRangeCriterion
    </index>
    <index>
      name modified
      friendlyName Modification Date
      description The time and date an item was last modified
      criterion ATFriendlyDateCriteria
      criterion ATDateRangeCriterion
    </index>
    <index>
      name effective
      friendlyName Effective Date
      description The time and date an item becomes publicly available
      criterion ATFriendlyDateCriteria
      criterion ATDateRangeCriterion
    </index>
    <index>
      name expires
      friendlyName Expiration Date
      description The time and date an item is no longer publicly available
      criterion ATFriendlyDateCriteria
      criterion ATDateRangeCriterion
    </index>
    <index>
      name effectiveRange
      friendlyName Effective Range
      description All items pubilcly available on a certain date
      criterion ATFriendlyDateCriteria
      enabled off
    </index>
    <index>
      name Date
      friendlyName Modification Date (duplicate)
      description The time and date an item was last modified (duplicate)
      criterion ATFriendlyDateCriteria
      criterion ATDateRangeCriterion
      enabled off
    </index>
    <index>
      name sortable_title
      friendlyName Title
      description An item's title transformed for sorting
      enabled on
    </index>


