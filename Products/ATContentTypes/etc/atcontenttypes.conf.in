      criterion ATSimpleStringCriterion
      criterion ATListCriterion
    </index>
    <index>
      name id
      friendlyName Short Name (duplicate)
      description The short name of an item (duplicate)
      enabled off
      criterion ATSimpleStringCriterion
      criterion ATListCriterion
    </index>
    <index>
      name in_reply_to
      enabled off
    </index>
    <index>
      name meta_type
      enabled off
    </index>
    <index>
      name path
      friendlyName Location
