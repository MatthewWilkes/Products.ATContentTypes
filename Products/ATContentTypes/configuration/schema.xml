<schema prefix="Products.ATContentTypes.configuration.datatype">

  <description format="plain">
    ATContentTypes configuration schema
  </description>

  <import package="Products.ATContentTypes.configuration" />

  <section type="mxtidy" name="*" attribute="mxtidy" required="yes"
   datatype=".mxtidy_handler">
    <description>
      mxTidy options
    </description>
  </section>

  <section type="feature" name="templatemixin"  attribute="templatemixin"
   required="yes" datatype=".templatemixin_handler">
  </section>

  <section type="feature" name="constrainmixin" attribute="constrainmixin"
   required="yes" datatype=".constrainmixin_handler">
  </section>
  
  <section type="contenttype" name="ATDocument"
   attribute="ATDocument" required="yes" />

  <section type="contenttype" name="ATEvent"
   attribute="ATEvent" required="yes" />

  <section type="contenttype" name="ATFavorite"
   attribute="ATFavorite" required="yes" />

  <section type="contenttype" name="ATFile"
   attribute="ATFile" required="yes" />
   
   <!--section type="contenttype" name="ATExtFile"
   attribute="ATExtFile" required="yes" /-->

  <section type="contenttype" name="ATFolder"
   attribute="ATFolder" required="yes" />

  <section type="contenttype" name="ATBTreeFolder"
   attribute="ATBTreeFolder" required="yes" />

  <section type="contenttype" name="ATImage"
   attribute="ATImage" required="yes" />

  <!--section type="contenttype" name="ATExtImage"
   attribute="ATExtImage" required="yes" /-->

  <section type="contenttype" name="ATLink"
   attribute="ATLink" required="yes" />

  <section type="contenttype" name="ATNewsItem"
   attribute="ATNewsItem" required="yes" />

  <section type="contenttype" name="ATTopic"
   attribute="ATTopic" required="yes" />

</schema>